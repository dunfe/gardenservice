<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.main.garderservice.Controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServiceController</servlet-name>
        <servlet-class>com.main.garderservice.Controller.ServiceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceController</servlet-name>
        <url-pattern>/ServiceController</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>HomeController</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>GalleryController</servlet-name>
        <servlet-class>com.main.garderservice.Controller.GalleryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GalleryController</servlet-name>
        <url-pattern>/GalleryController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ContactController</servlet-name>
        <servlet-class>com.main.garderservice.Controller.ContactController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactController</servlet-name>
        <url-pattern>/ContactController</url-pattern>
    </servlet-mapping>
</web-app>